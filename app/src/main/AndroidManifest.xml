<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.calculatenow">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_blue"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Light">

        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor"
            android:launchMode="singleTop">
            <intent-filter>
                <category android:name="android.intent.category.APP_CALCULATOR" />
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".MainActivityBlue"
            android:enabled="true"
            android:icon="@drawable/ic_blue"
            android:targetActivity=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityCyan"
            android:enabled="false"
            android:icon="@drawable/ic_cyan"
            android:targetActivity=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityGray"
            android:enabled="false"
            android:icon="@drawable/ic_gray"
            android:targetActivity=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityGreen"
            android:enabled="false"
            android:icon="@drawable/ic_green"
            android:targetActivity=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityPurple"
            android:enabled="false"
            android:icon="@drawable/ic_purple"
            android:targetActivity=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity-alias
            android:name=".MainActivityRed"
            android:enabled="false"
            android:icon="@drawable/ic_red"
            android:targetActivity=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>

        <activity
            android:name=".view.HistoryActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Light.historyActivityTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.MainActivity" />
        </activity>
    </application>
</manifest>